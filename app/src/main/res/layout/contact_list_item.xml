<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:clickable="true"
    android:orientation="vertical"
    app:cardElevation="3dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:flexDirection="row"
        app:flexWrap="nowrap"
        app:alignItems="flex_start">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_flexGrow="2"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/im_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:contentDescription="@string/item"
                android:src="@drawable/profile_pic_1529318414"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_flexGrow="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Erick Njiru"
                android:maxLines="1"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="0718931359"
                android:textColor="@color/colorDarkGray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ericknjiru73@gmail.com"
                android:textColor="@color/colorDarkGray"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_flexGrow="3"
            app:layout_alignSelf="center">

            <Button
                android:id="@+id/btn_follow_or_invite"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/primary_button"
                android:layout_gravity="center"
                android:clickable="true"
                android:elevation="3dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:text="@string/follow" />
        </FrameLayout>

    </com.google.android.flexbox.FlexboxLayout>
</android.support.v7.widget.CardView>
