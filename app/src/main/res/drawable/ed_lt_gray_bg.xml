<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="@color/colorPrimary"/>
            <padding
                android:right="10dp"
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="@color/colorPrimary"/>
            <padding
                android:right="10dp"
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="@color/colorAltDarkGray3"/>
            <padding
                android:right="10dp"
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>